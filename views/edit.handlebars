<h1 class="mb-1 restaurant-show-title">修改餐廳</h1>
<form action="/restaurants/{{ restaurant._id }}?_ method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            店名：
          </span>
          <input type="text" placeholder="輸入店家名稱" name="name" value="{{restaurant.name}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" placeholder="輸入店家類別" name="category" value="{{restaurant.category}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" placeholder="輸入店家地址" name="location" value="{{restaurant.location}}">
          <input type="text" placeholder="輸入Goole Map 定位" name="google_map" value="{{restaurant.google_map}}">
          <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" placeholder="輸入店家電話" name="phone" value="{{restaurant.phone}}">
        </p>

        <p class="mb-1">
          <span class="badge badge-pill badge-warning font-weight-normal">
            <i class="fas fa-star fa-xs"></i>
          </span>
          <input type="text" placeholder="輸入評分" name="rating" value="{{restaurant.rating}}">
        </p>

        <p class="mb-1" style="width: 100px; height: 200px;">
          <input type="text" class="mb-1 text-nowarp" style="width: 500px; height: 200px;" placeholder="輸入店家特色"
            name="description" value="{{restaurant.description}}">
        </p>
        <p class="mb-1">
          <input type="text" style="width: 500px;" placeholder="輸入店家照片網址" name="image" value="{{restaurant.image}}">
        </p>

        <button type="submit">儲存</button>
      </div>
    </div>
  </div>
</form>