<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="container d-flex justify-content-between">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{ keyword }}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
      </form>
      <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Sort
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <li><a class="dropdown-item" href="/sort/name_en/asc">A - Z</a></li>
          <li><a class="dropdown-item" href="/sort/name_en/desc">Z - A</a></li>
          <li><a class="dropdown-item" href="/sort/category/asc">類別</a></li>
          <li><a class="dropdown-item" href="/sort/location/asc">地區</a></li>
          <li><a class="dropdown-item" href="/sort/rating/desc">Rating</a></li>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-warning font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="mt-2 d-flex justify-content-around">
                <div>
                  <a class="btn btn-sm btn-outline-success " href="./restaurants/{{ this._id }}/edit" role="button"><i
                      class="fas fa-edit mr-1"></i>Edit</a>
                </div>
                <div>
                  <a class="btn btn-sm btn-outline-info mr-2" href="./restaurants/{{ this._id }}" role="button"><i
                      class="fas fa-info mr-1"></i>Details</a>
                </div>
                <div>
                  <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display:inline;">
                    <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>